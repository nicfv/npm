#!/usr/bin/env bash

clean=false
build=false
test=false
pack=false

while getopts ':cbtp' opt ; do
    case "${opt}" in
        'c') clean=true ;;
        'b') build=true ;;
        't') test=true ;;
        'p') pack=true ;;
        *) echo "Invalid option ${OPTARG}" && exit 1 ;;
    esac
done

if "${test}" ; then
    tsc --noEmit
fi

if "${build}" ; then
    tsc && node dist/test.js && rm dist/test.js types/test.d.ts
fi

if "${pack}" ; then
    npm pack --pack-destination examples
fi

if "${clean}" ; then
    rm -rf dist types
fi